{
  "manifest_version": 3,
  "name": "Tab Rot",
  "version": "1.0.0",
  "description": "Combat tab hoarding with aggressive emoji rot indicators",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Rot Control Panel"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
