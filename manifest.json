{
  "manifest_version": 3,
  "name": "Tab Decay",
  "version": "1.0.0",
  "description": "Combat tab hoarding with aggressive emoji decay indicators",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Decay Control Panel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
